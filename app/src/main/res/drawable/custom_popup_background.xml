<!-- res/drawable/custom_popup_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_gray" /> <!-- Shadow color -->
            <corners android:radius="8dp" /> <!-- Match the corner radius of the PopupMenu -->
        </shape>
    </item>
    <!-- Background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- PopupMenu background color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>